@model IEnumerable<TurtleLibrary.Models.Turtle>

@{
    ViewData["Title"] = "Browse";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Portrait)
            </th>
            <th>
                <a asp-area="" asp-controller="Browser" asp-action="BrowseOrdered" asp-route-isAscending="@(!((string)ViewData["orderByProperty"]=="Name" && (bool)ViewData["isAscending"]))" asp-route-orderByProperty="Name">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                Availability
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(_ => item.Portrait)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Name)
                </td>
                <td>
                    @(item.CheckedOutBy != null ? "Checked Out" : "Available")
                </td>
            </tr>
        }
    </tbody>
</table>
